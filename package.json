{
  "type": "module",
  "devDependencies": {
    "@swc/core": "1.7.26",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "prettier-plugin-jsdoc": "1.3.0",
    "type-fest": "4.26.1"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  },
  "wallaby": {
    "runMode": "onsave",
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    },
    "hints": {
      "allowIgnoringCoverageInTests": true
    }
  }
}
